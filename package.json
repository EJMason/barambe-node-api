{
  "name": "bar-server",
  "version": "1.0.0",
  "description": "Barambe REST API",
  "main": "app.js",
  "scripts": {
    "test": "jest --color",
    "test:w": "NODE_ENV=testing jest --watch --colors",
    "up": "docker-compose up",
    "down": "docker-compose down",
    "dev": "NODE_ENV=development node ./watcher.js"
  },
  "author": "ejmason",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.2",
    "chalk": "^2.2.0",
    "config": "^1.27.0",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "helmet": "^3.9.0",
    "mongoose": "^4.12.3"
  },
  "devDependencies": {
    "jest": "^21.2.1",
    "morgan": "^1.9.0",
    "nodemon": "^1.12.1"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [],
    "coverageThreshold": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    },
    "coverageReporters": [
      "text-summary"
    ]
  },
  "nodemonConfig": {
    "restartable": "rs",
    "watch": [],
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "script": "./src/app.js",
    "verbose": true
  }
}
